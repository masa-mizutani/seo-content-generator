ENVIRONMENT=development
DEBUG=True

# OpenAI API設定
OPENAI_API_KEY=your_openai_api_key

# データベース設定
DATABASE_URL=sqlite:///./app.db

# Square API設定
SQUARE_ACCESS_TOKEN=your_square_access_token
